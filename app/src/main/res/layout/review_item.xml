<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/iv_review_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/review"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_author"
        app:layout_constraintBottom_toTopOf="@+id/tv_review_author"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/tv_review_author"
        android:src="@drawable/play_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textSize="18sp"
        android:textColor="@color/bold_title"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="@string/app_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_review_icon"
        tools:layout_editor_absoluteY="0dp" />
    <uk.co.deanwild.flowtextview.FlowTextView
        android:id="@+id/ftv_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textColor="@color/bold_title"
        android:layout_marginTop="8dp"
        tools:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_author"
        />
</android.support.constraint.ConstraintLayout>


