<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/iv_trailer_icon"
        android:src="@drawable/youtube"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/image_trailer_content_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_trailer_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_trailer_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="start|center_vertical"
        android:textSize="16sp"
        android:textColor="@color/bold_title"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="@string/app_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_trailer_icon"
        />
</android.support.constraint.ConstraintLayout>

